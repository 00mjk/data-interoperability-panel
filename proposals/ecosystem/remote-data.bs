  eco:accessMode [ acl:Read acl:Write acl:Append acl:Control ]+ ;
  eco:hasRemoteDataInstance IRI* ;    # if specific instances are selected or inherited
  eco:hasDataReceipt IRI+ ;         # Associated data receipts
}
</pre>

